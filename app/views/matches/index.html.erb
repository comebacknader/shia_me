<% provide(:title, @admin.name) %>

	<%= link_to profile_admin_path(current_admin) do %>
	  <div class="all_logo">
		<%= image_tag("headerlogo.png") %>	
	  </div>
	<% end %>

	<%= render 'shared/admin_navbar' %>
	<%= render 'shared/allbar' %>

 <div class="admin_cont">

	<%= render 'shared/sidebar' %>


	<% flash.each do |key, value| %>
	  <div class="alert  alert-<%= key %>"><%= value %></div>
	<% end %>	
	
	<div class="admin_show">
		
		
		<h1 class="admin_show_header">All Matches</h1>
		
		<div class="admin_match_box">
			<% @matches.each do |match| %>
			<%= link_to match do %>
			<div class="admin_each_match">
				<% if match.man.avatar.present? %>
					<%= image_tag(match.man.avatar(:small)) %>
				<% else %>
					<%= image_tag("viewprofile.png") %>
				<% end %>
				<% if match.woman.avatar.present? %> 
					<%= image_tag(match.woman.avatar(:small)) %>					
				<% else %>
					<%= image_tag("viewprofile.png") %>
				<% end %>
				<div class="admin_each_men_info">
					<p><%= truncate(match.man.name, :length => 15) %></p>
					<p><%= truncate(match.woman.name, :length => 15) %></p>					
					<p class="admin_match_date"><%= time_ago_in_words(match.created_at).titlecase %></p>
				</div>
			</div>
			<% end %>
			<% end %>
		</div>
	</div>

 </div>
