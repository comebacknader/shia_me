<% provide(:title, @user.name) %>

	<div class="user_all_bar">
		<div class="container">
				
			<%= link_to signout_path, method: "delete" do %>
				<div class="user_home_button"> 
	 				 Sign Out
				</div>
			<% end %>
	
	
				<%= link_to edit_user_path(@user) do %>
					<div class="user_home_button">
							Settings
					</div>
				<% end %>
		
			
		<%= link_to @user do %>
			<div class="user_home_button">
				<p> Home </p>
			</div>
		<% end %>

		<%= link_to profile_user_url do %>	
			<div class="user_home_button">
			 <%=  @user.name %>'s Profile</li>
			</div>
		<% end %>
	
		</div>
	</div>
	
	<div class="user_container">

		<% flash.each do |key, value| %>
		  <div class="alert  alert-<%= key %>"><%= value %></div>
		<% end %>	
	
		<div class="user_show">
		
		<div class="user_show_match_made">
	
					<div class="user_show_image">
						<% if @user.avatar.present? %>
							<%= image_tag(@user.avatar(:small), class: "user_no_pic") %>
						<% else %>
							<%= image_tag("userlogo.png", class: "user_no_pic") %>
						<% end %>
			
						<div class="user_show_pic">
							<%= link_to "Change Profile Picture", pics_user_path %>
						</div>
		
					</div>
	
				<div class="user_show_match">
					<%= image_tag('userlogo.png', class: 'user_show_match_no_pic') %>
				
				<div class="user_show_match_info">
						<h1 class="user_show_match_name"> Fatima Carun </h1>
						<p class="user_show_match_location"> Age : 23 </p>			
						<p class="user_show_match_location"> Location : San Jose, CA </p>
						<p class="user_show_match_location"> Ethnicity: Persian </p>
				</div>
					<div class="user_to_match_buttons">
					<div class="view_match_profile">
						<%= image_tag("search3.png", class: "search_button") %> 
					</div>
					<div class="user_msg_match">
					 <%= image_tag("message.png", class: "msg_button") %> 
					</div>			
					<div class="user_end_match">
					 <%= image_tag("endmatch2.png", class: "end_button") %> 
					</div>
			
				</div>
			</div>
		</div>

		<div class="user_account_notif">
				<%= image_tag("goldpack.png") %>
				<h1 class="user_account_header"> You are currently a Gold Member </h1>
		</div>

	
		<div class="user_show_match_bar">
			
			<%= image_tag(@user.admin.avatar(:small), class: 'user_matchmaker_pic') %>
			<p class="user_matchmaker_title_bold">Your MatchMaker:</p>			
			<p class="user_matchmaker_title"><%= @user.name %></p>

		</div>

			<ul class="user_home_list">
				<%= link_to profile_user_url do %>	
				<li class="user_home_list_round"> View Your Profile </li>
				<% end %>
				<li> Inbox (1) </li>
				<li> Answer Profile Questions </li>
				<li class="user_home_list_round_down"> Your Testimonials </li>
			</ul>
			

	
		</div>
	</div>
