<% provide(:title, @user.name) %>

	<div class="user_all_bar">
		<div class="container">
				
			<%= link_to signout_path, method: "delete" do %>
				<div class="user_home_button"> 
	 				 Sign Out
				</div>
			<% end %>
	
	
				<%= link_to edit_user_path(@user) do %>
					<div class="user_home_button">
							Settings
					</div>
				<% end %>
		
			
		<%= link_to @user do %>
			<div class="user_home_button">
				<p> Home </p>
			</div>
		<% end %>

		<%= link_to profile_user_url do %>	
			<div class="user_home_button">
			 <%=  @user.name %>'s Profile</li>
			</div>
		<% end %>
	
		</div>
	</div>
	
	<div class="user_container">

		<% flash.each do |key, value| %>
		  <div class="alert  alert-<%= key %>"><%= value %></div>
		<% end %>	

	
			<div class="user_show_image">
				<% if @user.avatar.present? %>
					<%= image_tag(@user.avatar(:small), class: "user_no_pic") %>
				<% else %>
					<%= image_tag("userlogo.png", class: "user_no_pic") %>
				<% end %>
				<div class="user_show_pic">
					<%= link_to "Change Profile Picture", pics_user_path %>
				</div>
			</div>

			<div class="user_show_match">
				<% if @user.matches.present? || @user.wmatches.present? %>
				<% if @user.gender == "MALE" %>
				<%= image_tag(@match.woman.avatar(:small), class: 'user_show_match_no_pic') %>
			<div class="user_show_match_info">
					<h1 class="user_show_match_name"> <%= @match.woman.name %> </h1>
					<p class="user_show_match_location"> Age:  </p>			
					<p class="user_show_match_location"> Location: <%= @match.woman.location %> </p>
					<p class="user_show_match_location"> Ethnicity: Persian </p>
			</div>
			<div class="user_to_match_buttons">
				<%= link_to profile_user_url(@match.woman) do %>
			<div class="view_match_profile">
				<%= image_tag("search3.png", class: "search_button") %> 
			</div>
				<% end %>
				<%= link_to new_user_message_path(@user) do %>
			<div class="user_msg_match">
			 <%= image_tag("message.png", class: "msg_button") %> 
			</div>		
				<% end %>
				<%= link_to deletematch_user_path do %>	
			<div class="user_end_match">
			 <%= image_tag("endmatch2.png", class: "end_button") %> 
			</div>		
				<% end %>		
		<% else %> 
			<%= image_tag(@wmatch.man.avatar(:small), class: 'user_show_match_no_pic') %>
					<div class="user_show_match_info">
							<h1 class="user_show_match_name"> <%= @wmatch.man.name %> </h1>
							<p class="user_show_match_location"> Age:  </p>			
							<p class="user_show_match_location"> Location: <%= @wmatch.man.location %> </p>
							<p class="user_show_match_location"> Ethnicity: Persian </p>
					</div>
					<div class="user_to_match_buttons">
				<%= link_to profile_user_url(@wmatch.man) do %>
					<div class="view_match_profile">
						<%= image_tag("search3.png", class: "search_button") %> 
					</div>
				<% end %>
				<%= link_to new_user_message_path(@user) do %>
					<div class="user_msg_match">
					 <%= image_tag("message.png", class: "msg_button") %> 
					</div>			
				<% end %>
				<%= link_to deletematch_user_path do %>						
					<div class="user_end_match">
					 <%= image_tag("endmatch2.png", class: "end_button") %> 
					</div>
				<% end %>	
		<% end %>
				</div>
					<% else %>
					<h1 class="no_match_made"> No Match Made </h1>
					<p class="no_match_description"> We are finding you the best match available. <br />
					  Thank You for your Patience. </p>
					<% end %>

				</div>
				
		
		<ul class="user_home_list">
			<%= link_to profile_user_url do %>	
			<li class="user_home_list_round"> View Your Profile </li>
			<% end %>
			<%= link_to user_messages_path(@user) do %>
			<li> Inbox </li>
			<% end %>
			<li class="user_home_list_round_down"> Answer Profile Questions </li>
		</ul>

	<%= link_to @user.admin do %>
		<div class="user_show_match_bar">
			
			<%= image_tag(@user.admin.avatar(:small), class: 'user_matchmaker_pic') %>
			<p class="user_matchmaker_title_bold">Your MatchMaker:</p>			
			<p class="user_matchmaker_title"><%= @user.admin.name %></p>

		</div>
	<% end %>
		
		<div class="user_account_notif">
				<%= image_tag("goldpack.png") %>
				<h1 class="user_account_header"> You are currently a Gold Member </h1>
		</div>		

	
		</div>
	</div>
