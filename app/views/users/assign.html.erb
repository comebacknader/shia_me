<% provide(:title, @admin.name) %>

	<%= link_to root_path do %>
<div class="all_logo">
	<%= image_tag("headerlogo.png") %>	
	
</div>
	<% end %>

	<ul class="admin_nav_bar">
		<li> <%= link_to "Profile", current_admin %></li>
		<li> <%= link_to "Settings", edit_admin_path(@admin) %></li>
		<li> <%= link_to "Change Picture", pics_admin_path %></li>
		<li> <%= link_to "Log Out", logout_path, method: "delete" %> </li>
	</ul>


<%= render 'shared/allbar' %>

<div class="admin_sidebar">
</div>


	<% flash.each do |key, value| %>
	  <div class="alert  alert-<%= key %>"><%= value %></div>
	<% end %>	
	
	<div class="admin_show">
		
		
		<h1 class="admin_show_header">Assign a MatchMaker</h1>
		
		<div class="admin_all_men_box">
			<div class="admin_each_men">
				<% if @user.avatar.present? %>
					<%= image_tag(@user.avatar(:medium)) %>
				<% else %>
					<%= image_tag("viewprofile.png") %>
				<% end %>
				<div class="admin_each_men_info">
					<p><%= truncate(@user.name, :length => 15) %></p>
					<p><%= @user.location %></p>
				</div>
			
			<div class="admin_assign_mm">	
			<%= form_for @user, :url => { action: "assignmm" } do |f| %>
			
			<%= f.label :admin_id, "MatchMaker", :class => "admin_assign_label" %>
			<%= collection_select(:user, :admin_id,  Admin.order("name ASC"), :id, :name, {:prompt => true}, :class => "admin_assign_dropdown" )%>
			
		<%= f.submit "Save", class: "admin_assign_button" %>
				
			<% end %>
			</div>
		</div>
		</div>

	
	</div>
