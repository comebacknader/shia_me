<% provide(:title, @user.name) %>

<% if current_user == User.find(params[:id]) %>
	<%= render 'shared/userallbar' %>
<% end %>	
	<div class="container">
	
				<%= link_to root_path do %>
		<div class="all_logo">
			<%= image_tag("headerlogo.png") %>	
		</div>
			<% end %>	
	
	<div class="user_profile_box">		
	
	
		<h1 class="admin_show_header"><%= @user.name %></h1>

		<% if @user.avatar.present? %>
		 <%= image_tag(@user.avatar(:medium), class: "admin_show_img" ) %>
        <% else %>
		 <%= image_tag("viewprofile.png", class: "admin_show_img" ) %>         
        <% end %>
        
		<p class="admin_show_location">
			<%= @user.location %>
		</p>
		<% if @question %>
		<p class="user_profile_ethnic">
			<strong> Age: </strong> <%= @user.age %>
		</p>		
		<p class="user_profile_ethnic">
			<strong> Ethnicity: </strong> <%= @question.ethnicity %>
		</p>	
		
		<% end %>
	
		<% if @question %>
			<p class="admin_show_bio"> <%= @user.name %> attended 
			<%= @question.education %> and is pursuing a career as a
			 <%= @question.job %>.  <%= @they %> prays <%= @question.prayer %>.  </p>
			 
			 <div class="user_profile_question">
			 	<p> Some of <%= @user.name %>'s Hobbies Include:
			 		<ul> 
			 			<li> <%= @question.firsthobby %> </li> 
			 			<li> <%= @question.secondhobby %> </li>
			 			<li> <%= @question.thirdhobby %> </li>
			 		</ul>
			 	</p>
			 </div>
			 <div class="user_islamtome">
			 <p class="user_islamtome_header">
			 What Islam means to <%= @user.name %> : 
			 </p>
			 	<p class="user_profile_quotes">
			 			"
			 	</p>
			 	<p class="user_islamtome_text"><%= @question.islamtoyou %>
			 	</p>
			 	<p class="user_profile_quotes">
			 			"
			 	</p>			 	
			 </div>
		<% else %>
			<p class="admin_show_bio"> <%= @user.name %> has not filled 
				out a profile. 
			</p>
		<% end %>	

	</div>
	
	
	<% if current_admin %> 
	
	<div class="profile_spouse_box">
	
	<% if @user.mquest.present? %>
	
	<h1 class="profile_mquest_header">Spouse Preferences</h1>
	
	<p class="list_of_mquest_answers">
	 Age Range: <%= @user.mquest.agerange %>
	</p>
		<p class="list_of_mquest_answers">
	 Ethnicity: <%= @user.mquest.ethnic %>
	</p>
		<p class="list_of_mquest_answers">
	 Hijab: <%= @user.mquest.needhijabi %>
	</p>
		<p class="list_of_mquest_answers">
	 Education Level: <%= @user.mquest.edulevel %>
	</p>
		<p class="list_of_mquest_answers">
	 Other Preferences: <%= @user.mquest.anypref %>
	</p>
	
	<% end %>
	
	</div>
	
	
	<% end %>
	
	
	<% if current_admin  %>
		<%= link_to profile_admin_url(current_admin) do %>
			<div class="admin_go_home">
				Go Home 
			</div>
		<% end %>
	<% else if current_user %>
		<%= link_to current_user do %>
	     <div class="admin_go_home">
			 Go Home
		 </div>
		<% end %>
	<% end %>
	<% end %>
</div>
