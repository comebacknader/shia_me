<% provide(:title, @user.name) %>

	<div class="user_all_bar">
		<div class="container">
				
			<%= link_to signout_path, method: "delete" do %>
				<div class="user_home_button"> 
	 				 Sign Out
				</div>
			<% end %>
	
	
				<%= link_to edit_user_path(@user) do %>
					<div class="user_home_button">
							Settings
					</div>
				<% end %>
		
			
		<%= link_to @user do %>
			<div class="user_home_button">
				<p> Home </p>
			</div>
		<% end %>

		<%= link_to profile_user_url(@user) do %>	
			<div class="user_home_button">
			 <%=  @user.name %>'s Profile</li>
			</div>
		<% end %>
	
		</div>
	</div>
	
	<div class="user_container">

		<% flash.each do |key, value| %>
		  <div class="alert  alert-<%= key %>"><%= value %></div>
		<% end %>	
	
			<div class="message_show_image">
				<% if @user.avatar.present? %>
					<%= image_tag(@user.avatar(:small), class: "user_no_pic") %>
				<% else %>
					<%= image_tag("userlogo.png", class: "user_no_pic") %>
				<% end %>
	
				<div class="user_show_pic">
					<%= link_to "Change Profile Picture", pics_user_path(@user) %>
				</div>

			</div>

			<div class="all_messages_box">
				<h1 class="all_message_header"> Inbox </h1>
					<% if @recieved.empty? then %>
				<p class="no_match_description"> No Messages in Inbox</p>
					<% else %>
				<% @recieved.each do |recieved| %>
					<div class="each_message"> 
				<%= link_to recieved do %>
					<%= image_tag(recieved.sender.avatar(:small), class:"all_msg_photo") %>
					<p class="all_msg_message">
						<%= recieved.message %> <br />
					</p>
					<p class="all_msg_message_time">
						<%= time_ago_in_words(recieved.created_at) %>
						ago
					</p>				
					</div>
				<% end %>
				<% end %>			
			 <%= link_to new_message_path do %>
				<div class="new_msg_link"> 
				    New Message
				 </div>			
			<% end %>
			 <%= link_to sent_path do %>
				<div class="new_msg_link"> 
				    Sent Messages
				 </div>			
			<% end %>	
					<% end %>
			</div>
				
				
			
		<ul class="message_home_list">
			<%= link_to profile_user_url(@user) do %>	
			<li class="message_home_list_round"> View Your Profile </li>
			<% end %>
			<%= link_to user_messages_path(@user) do %>
			<li> Inbox () </li>
			<% end %>
			<li class="message_home_list_round_down"> Answer Profile Questions </li>
		</ul>

	<%= link_to @user.admin do %>
		<div class="message_show_mm_box">
			
			<%= image_tag(@user.admin.avatar(:small), class: 'message_mm_pic') %>
			<p class="message_mm_title_bold">Your MatchMaker:</p>			
			<p class="message_mm_title"><%= @user.admin.name %></p>

		</div>
	<% end %>
		
	<% if @user.matches.present? || @user.wmatches.present? %>
		<div class="message_match_box">
		<% if @user.gender == "MALE" %>
			<%= link_to profile_user_url(@match.woman)  do %>
				<%= image_tag(@match.woman.avatar(:small)) %>
				<p class="message_mm_title_bold">Your Match:</p>
				<p class="message_mm_title"> <%= @match.woman.name %> </p>
			<% end %>
		<% else %>
			<%= link_to profile_user_url(@wmatch.man) do %>
				<%= image_tag(@wmatch.man.avatar(:small)) %>
				<p class="message_mm_title_bold">Your Match:</p>				
				<p class="message_mm_title"> <%= @wmatch.man.name %> </p>
			<% end %>
		<% end %>
		</div>			
		</div>
	<% end %>		
	</div>
