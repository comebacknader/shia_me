<% provide(:title, @admin.name) %>

	<%= link_to root_path do %>
<div class="all_logo">
	<%= image_tag("headerlogo.png") %>	
	
</div>
	<% end %>

	<ul class="admin_nav_bar">
		<li> <%= link_to "Profile", current_admin %></li>
		<li> <%= link_to "Settings", edit_admin_path(@admin) %></li>
		<li> <%= link_to "Change Picture", pics_admin_path(@admin) %></li>
		<li> <%= link_to "Log Out", logout_path, method: "delete" %> </li>
	</ul>


	<%= render 'shared/allbar' %>
	<%= render 'shared/sidebar' %>


	<% flash.each do |key, value| %>
	  <div class="alert  alert-<%= key %>"><%= value %></div>
	<% end %>	
	
	<div class="admin_show">
		
		
		<h1 class="admin_show_header">New Message</h1>

	<div class="admin_msg_box">
		<%= form_for @msg, controller: "admins", action: "newmsg" do |f| %>
				<%= f.text_area :message, class: "new_msg_textarea" %>
				
				<%= f.hidden_field(:admin_id) %>
				<%= f.hidden_field :seen %>				
				<div class="admin_msg_user_select">
				  <p> Send Message To: </p>
				  <%= f.collection_select(:user_id,  @users.all, 
				  		:id, :name) %>
				</div>
				
				<%= f.submit "Send Message", class:"admin_msg_submit" %>				
		<% end %>

	</div>
	
	</div>
