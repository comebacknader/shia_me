<% provide(:title, "Edit Admin") %>

	<%= link_to root_path do %>
<div class="all_logo">
	<%= image_tag("headerlogo.png") %>	
	
</div>
	<% end %>

	<ul class="admin_nav_bar">
		<li> <%= link_to "Profile", current_admin %></li>
		<li> <%= link_to "Settings", edit_admin_path(current_admin) %></li>
		<li> <%= link_to "Log Out", logout_path, method: "delete" %> </li>
	</ul>
	
	<div class="all_bar">
		
		<%= link_to profile_admin_url do %>
			<div class="home_button">
				<p> Home </p>
			</div>
		<% end %>
		
	</div>

<div class="container">
	
	<h1 class="admin_header">Change Picture</h1>
	
	<div class="admin_signup_box">
		<%= form_for @admin, :url => { action: "picsupdate" } do |f| %>
		
		<%= render 'shared/error_messages' %>
		
		<div class="admin_image_limits">
			<p> Make sure IMG is around 350x350px </p>
			<br />
			<p> Format must be .jpg or .png </p>
		</div>
		
		<%= image_tag(@admin.avatar(:large)) %>
		
		<%= f.file_field :avatar, class: "admin_change_pic" %>

		<%= f.submit "Save", class: "admin_create" %>

		<% end %>
	</div>
	
</div>